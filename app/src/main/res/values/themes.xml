<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SNotes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/blue_grey700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="actionMenuTextColor">@color/teal_200</item>
        <item name="android:textColorPrimary">@color/blue_grey700</item>
        <item name="android:textColorSecondary">@color/blue_grey700</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="iconTint">@color/blue_grey800</item>
    </style>

    <style name="NoteFab">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="tint">@color/blue_grey800</item>
        <item name="cardElevation">0dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="NoteCardView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="NoteTitleStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#253659</item>
        <item name="android:backgroundTint"></item>
    </style>

    <style name="NoteTextContainer" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:gravity">left|center</item>
        <item name="android:textColorHint"></item>
    </style>

    <style name="NoteTextStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#253659</item>
        <item name="android:backgroundTint"></item>
    </style>

    <style name="NoteButtonStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">#46b957</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>